  <div class="invisible card position-absolute top-50 start-50 translate-middle col-3" id="toggle">
    <div class="card-body shadow">
      <div class="mb-3">
        <label for="item_name" class="form-label">Item: </label>
        <input type="text" class="form-control" id="item_name" placeholder="Apple" autocomplete="off" />
      </div>
      <div class="mb-3">
        <label for="quantity" class="form-label">Quantity</label>
        <input type='text' class="form-control" id="quantity" placeholder="10" autocomplete="off"/>
      </div>
      <div class="mb-3">
        <label for="frequency" class="form-label">Frequency</label>
        <input type='text' class="form-control" id="frequency" placeholder="weekly" autocomplete="off"/>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <input type='text' class="form-control" id="category" placeholder="Fruit" autocomplete="off"/>
      </div>
      <div class="mb-3">
        <label for="listname" class="form-label">Listname</label>
        <select class="form-select" id="listname" autocomplete="off">
            <option>Choose One...</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea row="2" class="form-control" id="comment" placeholder="" autocomplete="off"></textarea>
      </div>
      <div class="d-flex flex-row-reverse">
      <button class="btn btn-primary" id="inputbtn">Add</button>
      </div>
    </div>
  </div>

