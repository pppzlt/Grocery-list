{{!-- list page layout --}}
<body class="bg-primary-subtle">
    <ul class="nav nav-pills bg-primary">
        <li class="nav-item dropdown">
            <a class="nav-link bg-primary text-light" data-bs-toggle="dropdown" href="#" role="button"
                aria-expanded="false">
                <span class="material-symbols-outlined">
                    list
                </span>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/innerlist">Items</a></li>
                <li><a class="dropdown-item" href="javascript:;" id="logout">Log Out</a></li>
            </ul>
        </li>
    </ul>
    <main class="d-flex flex-column align-items-center">
        <div class="d-flex justify-content-center">
            <h1 class="text-primary">Active Lists</h1>
        </div>

        <div id="parent-div" class="d-flex flex-column justify-content-center col-6">
            {{#each allList as |list|}}
            {{> list-each}}            
            {{/each}}
        </div>

        <div class="mt-5">
            <div class="btn-group dropup">
                <button type="button" class="btn rounded-5 btn-secondary shadow-lg" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="javascript:;" id="addNewList">Add new List</a></li>
                </ul>
            </div>
        </div>

        {{!-- card --}}

        <div class="invisible card position-absolute top-50 start-50 translate-middle col-3" id="input-card">
            <div class="card-body shadow">
                <div class="mb-3">
                    <label for="comment" class="form-label">List Name</label>
                    <input type="text" row="2" class="form-control" id="listNameInput" placeholder=""
                        autocomplete="off"></input>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Description</label>
                    <input type="text" row="2" class="form-control" id="descriptInput" placeholder=""
                        autocomplete="off"></input>
                </div>
                <div class="d-flex flex-row-reverse">
                    <button class="btn btn-primary mx-2" id="inputclosebtn">Close</button>
                    <button class="btn btn-primary" id="inputbtn">Add</button>
                </div>
            </div>
        </div>

    </main>

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <script src="../listPage.js"></script>

</body>
