    {{!-- signup page layout --}}
    <div class="container justify-content-center text-center">
        <div class="row justify-content-center">
            <div class="col-6 d-flex flex-wrap">
                <div class="card-body shadow mt-3 rounded">
                    <div class = "bg-primary d-flex align-items-center flex-column shadow rounded-top">
                        <h5 class="card-title text-light p-1 ">Let's get you signed up.</h5>
                    </div>
                    <div class = "bg-body-tertiary rounded-bottom">
                        <div class="p-3 d-flex align-items-center ">
                            <label for="exampleFormControlInput1" class="form-label mx-2 col-2 p-1">Email address</label>
                            <div class = "col-9">
                                <input type="email" 
                                class="form-control" 
                                id="email" 
                                placeholder="name@example.com">
                            </div>
                        </div>
                        <div class="p-3 d-flex align-items-center">
                            <label for="first name" class="form-label p-1 mx-2 col-2">First Name</label>
                            <div class="col-9">
                                <input type="text" id = "first_name" class="form-control" >
                            </div>
                        </div>
                        <div class="p-3 d-flex align-items-center">
                            <label for="last name" class="form-label p-1 mx-2 col-2">Last Name</label>
                            <div class="col-9">
                                <input type="text" id = "last_name" class="form-control" >
                            </div>
                        </div>
                        <div class="p-3 d-flex align-items-center">
                            <label for="phone number" class="form-label p-1 mx-2 col-2">Phone</label>
                            <div class="col-9">
                                <input type="tel" id = "phone" class="form-control" >
                            </div>
                        </div>
                        <div class="p-3 d-flex align-items-center">
                            <label for="password"  class="form-label p-1 mx-2 col-2">Password</label>
                            <div class="col-9">
                                <input type="password" id ="password" class="form-control" >
                            </div>
                        </div>
                        <div class="p-3 d-flex align-items-center">
                            <label for="password confirm" class="form-label mx-2 col-2">Confirm Password</label>
                            <div class="col-9">
                                <input type="password" id = "confirm_password" class="form-control" >
                            </div>
                        </div>
                        <div class = "d-flex justify-content-center p-3">
                            <button class="btn btn-primary" id = "button" type="submit">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src = "signup.js"></script>
